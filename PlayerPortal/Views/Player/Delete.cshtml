@model PlayerPortal.Data.DataTransferModels.PlayerDataTransferModel

@{
    ViewData["Title"] = "Delete Player";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-success rounded-4">
                <div class="card-header bg-success text-white rounded-top-4">
                    <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Delete Player</h4>
                </div>
                <div class="card-body">
                    <p><b>Are you sure you want to delete this player?</b></p>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Shirt No</dt>
                        <dd class="col-sm-8">@Model.ShirtNo</dd>

                        <dt class="col-sm-4">Goals</dt>
                        <dd class="col-sm-8">@Model.Goals</dd>

                        <dt class="col-sm-4">Appearance</dt>
                        <dd class="col-sm-8">@Model.Appearance</dd>
                    </dl>

                    <form asp-action="Delete" class="mt-4 d-flex justify-content-between">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger px-4 shadow-sm">
                            <i class="fas fa-trash-alt me-1"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary px-4 shadow-sm">
                            <i class="fas fa-times me-1"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
