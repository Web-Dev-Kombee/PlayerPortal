@model PlayerPortal.Data.BrokerRequests.PlayerRequest
@{
    ViewData["Title"] = "Edit Player";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow rounded-4" style="background-color: #d1e7dd;">
                <div class="card-header bg-success text-white rounded-top-4">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Edit Player
                    </h4>
                </div>
                <div class="card-body bg-white rounded-bottom-4 p-4">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        @Html.HiddenFor(m => m.Id)

                        <div class="mb-3">
                            <label asp-for="ShirtNo" class="form-label fw-semibold text-success"></label>
                            <input asp-for="ShirtNo" class="form-control" />
                            <span asp-validation-for="ShirtNo" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold text-success"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Appearance" class="form-label fw-semibold text-success"></label>
                            <input asp-for="Appearance" class="form-control" />
                            <span asp-validation-for="Appearance" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Goals" class="form-label fw-semibold text-success"></label>
                            <input asp-for="Goals" class="form-control" />
                            <span asp-validation-for="Goals" class="text-danger small"></span>
                        </div>

                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-stretch gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg rounded-3 d-flex align-items-center justify-content-center w-100 shadow-sm">
                                <i class="bi bi-save me-2 fs-5"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-outline-success btn-lg rounded-3 d-flex align-items-center justify-content-center w-100 shadow-sm">
                                <i class="bi bi-arrow-left me-2 fs-5"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
